<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!--
   | Spring Web MVC Setup
   +-->
  <!--
  <context:component-scan base-package="org.dataconservancy.dcs.ui"/>
  -->

  <beans:bean id="mockProjectService" class="org.dataconservancy.ui.api.support.MockProjectService">
  </beans:bean>

  <beans:bean id="mockProjectBizService" class="org.dataconservancy.ui.api.support.MockProjectBizService">
    <beans:constructor-arg ref="mockProjectService"/>
  </beans:bean>

  <beans:bean id="mockUserService" class="org.dataconservancy.ui.api.support.MockUserService">
  </beans:bean>

  <beans:bean id="businessObjectBuilder" class="org.dataconservancy.ui.model.builder.xstream.XstreamBusinessObjectBuilder">
  </beans:bean>

  <beans:bean id="projectController" class="org.dataconservancy.ui.api.ProjectController">
    <beans:constructor-arg ref="mockProjectService"/>
    <beans:constructor-arg ref="mockProjectBizService"/>
    <beans:constructor-arg ref="mockUserService"/>
    <beans:constructor-arg ref="businessObjectBuilder"/>
  </beans:bean>

</beans:beans>