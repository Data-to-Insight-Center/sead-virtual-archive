<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xmlns="http://java.sun.com/xml/ns/javaee" 
	 xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
			     http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="dcs-access-http" version="2.5">
  <display-name>DCS HTTP Access</display-name>	

  <context-param>
    <param-name>dcpquery.impl</param-name>
    <param-value>${dcpquery.impl}</param-value>
    <description>Class implementing Query api</description>

    <param-name>datastream.url</param-name>
    <param-value>${datastream.url}</param-value>
    <description>Public url to the datastream servlet</description>

      <param-name>modelbuilder.impl</param-name>
      <param-value>${modelbuilder.impl}</param-value>
      <description>Instance of model builder</description>

      <param-name>sead.converter.util</param-name>
      <param-value>${sead.converter.util}</param-value>
      <description>SEAD Converter</description>
  </context-param>

  <servlet>
    <servlet-name>entityServlet</servlet-name>
    <servlet-class>org.dataconservancy.dcs.access.http.EntityServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>datastreamServlet</servlet-name>
    <servlet-class>org.dataconservancy.dcs.access.http.DatastreamServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>queryServlet</servlet-name>
    <servlet-class>org.dataconservancy.dcs.access.http.QueryServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>gqmQueryServlet</servlet-name>
  	<servlet-class>org.dataconservancy.dcs.access.http.GQMQueryServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>entityServlet</servlet-name>
    <url-pattern>/entity/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>datastreamServlet</servlet-name>
    <url-pattern>/datastream/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>queryServlet</servlet-name>
    <url-pattern>/query/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>gqmQueryServlet</servlet-name>
  	<url-pattern>/gqm/*</url-pattern>
  </servlet-mapping>
</web-app>
