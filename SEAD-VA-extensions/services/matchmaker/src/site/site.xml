<project name="Data Conservancy Deposit Framework" xmlns="http://maven.apache.org/DECORATION/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">
  
  <skin>
    <groupId>org.dataconservancy.skins</groupId>
    <artifactId>drcc-maven-skin</artifactId>
    <version>1.0.1</version>
  </skin>
  
  <bannerRight>
    <href>http://www.jhu.edu</href>
    <src>${project.url}/images/ldp-banner.png</src>
  </bannerRight>
  
  <publishDate position="right" format="MM-dd-yy hh:mm zz"/>
