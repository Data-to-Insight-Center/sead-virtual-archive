<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.seadva.archive</groupId>
    <artifactId>sead-archive-impl-s3</artifactId>
  <version>1.0.1-SNAPSHOT</version>
    <name>S3 cloud implementation</name>
    <packaging>jar</packaging>

    <parent>
        <artifactId>dcs-archive</artifactId>
        <groupId>org.dataconservancy.archive</groupId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>

    <build>

        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <executions>
                    <execution>
                        <id>jar</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <phase>package</phase>
                    </execution>
                </executions>
            </plugin>

        </plugins>

    </build>

    <dependencies>
        <dependency>
            <groupId>net.java.dev.jets3t</groupId>
            <artifactId>jets3t</artifactId>
            <version>0.9.0</version>
        </dependency>
        <dependency>
            <groupId>org.dataconservancy.archive</groupId>
            <artifactId>dcs-archive-api</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>org.dataconservancy.dcs</groupId>
            <artifactId>dcs-ingest-core</artifactId>
            <version>1.1.0-SNAPSHOT</version>
            <type>jar</type>
            <optional>false</optional>
        </dependency>
        <dependency>
            <groupId>org.dataconservancy.model</groupId>
            <artifactId>dcs-model</artifactId>
            <version>1.1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.dataconservancy.model</groupId>
            <artifactId>dcs-model-builder</artifactId>
            <version>1.1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.dataconservancy.model</groupId>
            <artifactId>dcs-model-builder-xstream</artifactId>
            <version>1.1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.seadva.archive</groupId>
            <artifactId>sead-archive-api</artifactId>
            <version>1.0.1-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.seadva.model</groupId>
            <artifactId>sead-model</artifactId>
            <scope>compile</scope>
            <version>1.0.1-SNAPSHOT</version>
            <optional>false</optional>
        </dependency>

        <dependency>
            <groupId>org.seadva.model</groupId>
            <artifactId>sead-model-builder-xstream</artifactId>
            <scope>compile</scope>
            <version>1.0.1-SNAPSHOT</version>
            <optional>false</optional>
        </dependency>


        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <name>jets3t</name>
            <id>jets3t</id>
            <url>http://www.jets3t.org/maven2</url>
        </repository>
    </repositories>
</project>
